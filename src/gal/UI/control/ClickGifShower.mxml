<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import org.bytearray.gif.player.GIFPlayer;

			public var source:String="";
			
			public function show():void{
				var request:URLRequest = new URLRequest(source);
				var gifPlayer:GIFPlayer=new GIFPlayer(true);
				img.addChild(gifPlayer);
				gifPlayer.load(request);
			}
		]]>
	</fx:Script>
	<mx:Image id="img" width="100%" height="100%" maintainAspectRatio="false"/>
</s:Group>
